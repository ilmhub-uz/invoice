@model ContactViewModel

<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
    <div class="card bg-light d-flex flex-fill">
        <div class="card-header text-muted border-bottom-0">
            Invoice
        </div>
        <div class="card-body pt-0">
            <div class="row">
                <div class="col-7">
                    <h2 class="lead"><b>@Model.Name</b></h2>
                    <p class="text-muted text-sm"><b>Email: </b> @Model.Email </p>
                    <ul class="ml-4 mb-0 fa-ul text-muted">
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: @Model.Address</li>
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone #: @Model.Phone</li>
                    <h2 class="lead"><b>@Model.Owner</b></h2>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-right">
                <a href="#" class="btn btn-sm btn-primary">
                    <i class="fas fa-user"></i> Contactni kurish
                </a>
            </div>
        </div>
    </div>
</div>