@model webapp.ViewModel.RegisterViewModel;

@{
    Layout = "_AuthLayout";
}

<form class="d-flex justify-content-center form-signin " method="post" asp-action="Register" asp-controller="Account">
  <input hidden asp-for="@Model.ReturnUrl">
  <div class="login-box" style="margin-top:70px;">
    <a href="/" class="brand-link d-flex justify-content-center">
      <img src="/images.jpg" class="brand-image img-circle " style="opacity: .8">
      <span class="brand-text font-weight-light">Invoice</span>
    </a>
    <div class="card">
      <div class="card-body login-card-body">
        <p class="login-box-msg">Register a new membership</p>
      
        <form action="../../index3.html" method="post">
          <div class="input-group mb-3">
            <input asp-for="@Model.Fullname" type="text" class="form-control" placeholder="Full name">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-user"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input asp-for="@Model.Phone" type="phone" class="form-control" placeholder="Phone">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="bi bi-telephone-fill"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input asp-for="@Model.Email" type="email" class="form-control" placeholder="Email">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Password">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" placeholder="Retype password">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="d-flex justify-content-center" >
            <div class="my-3 col-6">
              <button type="submit" class="btn btn-primary btn-block">Register</button>
            </div>
          </div>
        </form>
        <div class="my-2 col-4" >
          <a type="submit" style="margin-left:25px;height: 50px; width: 250px; border-radius:5px;"   href="~/account/login" class="text-center"><p class="text-center">I already have a membership</p></a>
        </div>  
    </div>
  </div>
  <p class="mt-5 mb-3 text-muted text-center">Â© @DateTimeOffset.Now.Year</p>
</form> 