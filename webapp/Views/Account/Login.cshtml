@model webapp.ViewModel.LoginViewModel;

@{
    Layout = "_AuthLayout";
}

<form class="d-flex justify-content-center form-signup" method="post" asp-action="Login" asp-controller="Account">
  <input hidden asp-for="ReturnUrl">
      <div class="login-box" style="margin-top:70px;">
        <a href="/" class="brand-link d-flex justify-content-center">
          <img src="/images.jpg" class="brand-image img-circle" style="opacity: .8" >
          <span class="brand-text font-weight-light">Invoice</span>
        </a>
        <div class="card">
          <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>
          
            <form action="../../index3.html" method="post">
              <div class="input-group mb-3">
                <input asp-for="@Model.Email"  type="email" class="form-control" placeholder="Email">
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                  </div>
                </div>
              </div>
              <div class="input-group mb-3">
                <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Password">
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-8">
                  <div class="icheck-primary">
                    <input type="checkbox" id="remember">
                    <label for="remember">
                      Remember Me
                    </label>
                  </div>
                </div>
                <div class="d-flex justify-content-center col-4">
                  <button href="" type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
              </div>
              <p></p>
              
            </form>
            <div class="d-flex justify-content-center col-12">
              <a href="~/account/register" class="text-center "><p>Register a new membership</p></a>
            </div>
         
        </div>
      </div>
   </div>
    <p class="mt-5 mb-3 text-muted text-center">Â© @DateTimeOffset.Now.Year</p>

</form>